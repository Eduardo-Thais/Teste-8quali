@model List<ClienteModel>
@{
    ViewData["Title"] = "Pagina inicial";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a  class="btn btn-primary" role="button" asp-controller="Cliente" asp-action="Criar">Editar</a>
    </div>
    <br/>

    <h1 class="display-4">Listagem de clientes.</h1>


    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nome</th>
          <th scope="col">Empresa</th>
          <th scope="col">Email</th>
          <th scope="col">Telefone Pessoal</th>
          <th scope="col">Telefone Comercial</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
            @if(Model != null && Model.Any())
            {
                foreach(ClienteModel cliente in Model)
                {
                    <tr>
                      <th scope="row">@cliente.Id</th>
                      <td>@cliente.nome</td>
                      <td>@cliente.empresa</td>
                      <td>email</td>
                      <td>@cliente.telefonePessoal</td>
                      <td>@cliente.telefonecomercial</td>
                      <td>
                      <div class="btn-group" role="group" aria-label="Basic example">
                          <a  class="btn btn-danger" asp-route-id="@cliente.Id" asp-controller="Cliente" asp-action="Apagar" >Apagar</a>
                          <a  class="btn btn-primary">Editar</a>
                          <a  class="btn btn-warning">Adicionar email</a>
                      </div>
                      </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>


